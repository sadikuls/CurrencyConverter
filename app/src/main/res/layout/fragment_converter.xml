<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_margin="10dp"
        android:layout_height="50dp">
        <EditText
            android:background="@drawable/bg_btn_currency"
            android:padding="3dp"
            android:textSize="30sp"
            android:gravity="right"
            android:text="0.001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_btn_currency"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="YYY"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:id="@+id/tv_key_7"
                android:background="@drawable/bg_btn_currency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="7"
                android:textColor="#212121"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_key_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="8"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"
                android:background="@drawable/bg_btn_currency" />

            <TextView
                android:id="@+id/tv_key_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"
                android:background="@drawable/bg_btn_currency"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:weightSum="3"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:id="@+id/tv_key_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                android:textColor="#212121"
                android:gravity="center"

                android:background="@drawable/bg_btn_currency" />

            <TextView
                android:id="@+id/tv_key_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"
                android:background="@drawable/bg_btn_currency" />

            <TextView
                android:id="@+id/tv_key_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="6"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"
                android:background="@drawable/bg_btn_currency" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:id="@+id/tv_key_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="1"
                android:textColor="#212121"
                android:gravity="center"

                android:background="@drawable/bg_btn_currency" />

            <TextView
                android:id="@+id/tv_key_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="2"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"

                android:background="@drawable/bg_btn_currency" />

            <TextView
                android:id="@+id/tv_key_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:gravity="center"
                android:background="@drawable/bg_btn_currency" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
